@{
    ViewData["Title"] = "Usuario";
}
@using WebApplication1.Areas.Identity.Data
@model ICollection< Usuario >

<div class="text-center">
    <h1 class="display-4"> Lista de Usuarios </h1>
    @if (Model != null && @Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Email</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="col">@user.Id</td>
                        <td class="col">@user.Nombre</td>
                        <td class="col">@user.Email</td>
                        <td class="col">
                            <a class="btn btn-primary " asp-asp-controller="Usuario" asp-action="Editar" asp-route-id="@user.Id">Editar</a>
                            <a class="btn btn-danger" asp-asp-controller="Usuario" asp-action="Delete" asp-route-id="@user.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>